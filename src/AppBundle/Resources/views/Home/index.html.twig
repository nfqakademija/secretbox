{% extends "::base.html.twig" %}

{% block title %}
    Pradžia - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row">
        <div id="introCarousel" class="carousel slide col-lg-6" data-ride="carousel" data-interval="6000">
            <ol class="carousel-indicators">
                <li data-target="#introCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#introCarousel" data-slide-to="1"></li>
                <li data-target="#introCarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img class="first-slide" src="{{ asset('images/parallax/1.jpg') }}" alt="First slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <div class="message">
                                {{ 'intro.first'|trans }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img class="second-slide" src="{{ asset('images/parallax/2.jpg') }}" alt="Second slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <div class="message">{{ 'intro.second'|trans }}</div>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img class="third-slide" src="{{ asset('images/parallax/3.jpg') }}" alt="Third slide">
                    <div class="container">
                        <div class="carousel-caption">
                            <div class="message">{{ 'intro.third'|trans }}</div>
                        </div>
                    </div>
                </div>
            </div>
            <a class="left carousel-control" href="#introCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#introCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="col-lg-6">
            <div style="background-color: white; height: 50vh"></div>
            <div style="background-color: black; height: 50vh"></div>
        </div>
    </div>

    <div id="aboutScrollTo" class="scroll-element"></div>

    <div class="row">
        <div class="col-lg-10 col-sm-12 col-lg-offset-1 content-bg body-about">
            <div class="about-container" >
                    <div class="row about-content">
                        <div id="about1" class="col-lg-3" align="center">
                            <img src="{{ asset('images/order_box.png') }}" width="140" height="140">
                            <h2 class="about-heading">{{ 'order.secretbox'|trans }}</h2>
                            <h4>{{ 'order.begin.first.message'|trans }}</h4>
                        </div>
                        <div id="about2" class="col-lg-3 col-lg-offset-1" align="center">
                            <img class="img-circle" src="{{ asset('images/treasure-map.png') }}" width="140" height="140">
                            <h2 class="about-heading">Įveikite visas užuominas</h2>
                            <h4>{{ 'order.begin.second.message'|trans }}</h4>
                        </div>
                        <div id="about3" class="col-lg-3 col-lg-offset-1" align="center">
                            <img class="img-circle" src="{{ asset('images/chest.png') }}" width="140" height="140">
                            <h2 class="about-heading">Mėgaukitės rezultatu</h2>
                            <h4>{{ 'order.begin.third.message'|trans }}</h4>
                        </div>
                    </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $("#menu-button-about").click(function() {
            goToElement("#aboutScrollTo");
        });

        $(document).ready(function () {
            var contentLink = '{{ contentLink|raw }}';
            if(contentLink){
                goToElement("#aboutScrollTo");
            }
        });

        function goToElement(element) {
            $('html, body').animate({
                scrollTop: $(element).offset().top
            }, 500);
            var about1 = $("#about1");
            var about2 = $("#about2");
            var about3 = $("#about3");
            about1.fadeOut(1);
            about2.fadeOut(1);
            about3.fadeOut(1);
            about1.fadeIn(2500);
            about2.fadeIn(3500);
            about3.fadeIn(5000);
        }
    </script>
{% endblock %}
