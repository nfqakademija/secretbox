{% block body %}
    <div class="row">
        <div class="col-lg-12 body-parallax">
            <div id="parallax">

                <div class="parallax-window" data-parallax="scroll"
                     data-image-src="{{ asset("images/parallax/1.jpg") }}" data-speed="0.1" >
                </div>
                <div class="parallax-window parallax-text">
                    <div class="parallax-slider">
                            <div class="col-lg-10 col-lg-offset-1 message">
                                {{ 'intro.first'|trans }}
                            </div>
                    </div>
                </div>
                <div class="parallax-window" data-parallax="scroll"
                     data-image-src="{{ asset('images/parallax/2.jpg') }}" data-speed="0.1"></div>
                <div class="parallax-window parallax-text">
                    <div class="parallax-slider" >
                        <div class="col-lg-10 col-lg-offset-1 message">{{ 'intro.second'|trans }}</div>
                    </div>
                </div>
                <div class="parallax-window" data-parallax="scroll"
                     data-image-src="{{ asset('images/parallax/3.jpg') }}" data-speed="0.1">
                </div>
                <div class="parallax-window parallax-text">
                    <div class="parallax-slider">
                        <div class="col-lg-10 col-lg-offset-1  message">{{ 'intro.third'|trans }}</div>
                    </div>
                </div>
                <div class="parallax-window parallax-transparent" data-parallax="scroll"
                     {#data-image-src="{{ asset("images/parallax/4.jpg") }}" #}
                     data-speed="0.1" data-text="test">
                    <div class="col-lg-10 col-lg-offset-1 order-message">
                        <a id="order-button" class="btn button-order-now" href="{{ path('app.order.begin') }}">
                            <span id="order-button-text">{{ 'product.order'|trans }}</span>
                        </a>
                        {#</div>#}
                    </div>

                {#<div class="parallax-window parallax-text" data-parallax="scroll>#}
                    {#<div class="parallax-slider">#}
                        {#<div class="col-lg-10 col-lg-offset-1 message">#}
                            {#<a class="btn button-order-now" href="{{ path('app.order.now') }}">{{ 'product.order'|trans }}</a>#}
                        {#</div>#}
                    {#</div>#}
                {#</div>#}

                </div>
                <div class="parallax-window" data-parallax="scroll" data-speed="0.1">
                    <div class="col-lg-10 col-lg-offset-1">
                        <div class="home-impressions">
                            <div class="col-lg-12">
                                <h2>{{ 'content.impresions' | trans }}</h2>
                            </div>
                            {% for impression in impressions  %}
                            <div class="col-lg-6 impression">
                                <div class="impression-box">
                                    <img class="img-circle2" src="{{ impression.user.pictureUrl }}"/>
                                    <div class="impression-title">
                                        <div class="font-weight-bold">{{ impression.user.firstName }} {{ impression.user.lastName }}</div>
                                        <div>{{ impression.createdAt|date('Y-m-d h:m:s') }}</div>
                                    </div>
                                    {{ impression.impression }}
                                </div>
                            </div>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {#modals:#}
    <div class="modal fade" id="subscribe-newsletter" tabindex="-1" role="dialog" aria-labelledby="subscribe-newsletterLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                {{ form_start(formUserEmail) }}
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">
                        {{ 'user.email.subscription' | trans }}
                    </h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-12">
                            {{ form_row(formUserEmail.email) }}
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    {{ form_widget(formUserEmail.save) }}
                    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'content.close' | trans }}</button>
                </div>
                {{ form_end(formUserEmail) }}
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->


{% endblock %}

