    <style>


        /* Carousel base class */
        .carousel {
            height: 100vh;
            margin-bottom: 80px;
        }
        /* Since positioning the image, we need to help out the caption */
        .carousel-caption {
            z-index: 10;
        }

        /* Declare heights because of positioning of img element */
        .carousel .item {
            height: 100vh;
            background-color: #777;
        }
        .carousel-inner > .item > img {
            position: absolute;
            top: 0;
            left: 0;
            min-width: 100%;
            height: 100vh;
            object-fit: cover;
        }

        .carousel-caption {
            background-color: rgba(181,162,162,0.7);
            box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
            border-radius: 100px 50px;
        }

        .carousel-indicators{
            color: #0a568c;
        }
    </style>
{% endblock %}

