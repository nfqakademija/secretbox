{% extends "::base.html.twig" %}

{% block title %}
    Nauja paslaptis - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row body-order">
        <div class="col-lg-10 col-sm-12 col-lg-offset-1 content-bg">
            <div class=".content-container">
                <div class="order-container" style="margin: 30px 0 0; background: rgba(231,214,189,0.8); height: 600px; padding-top: 30px; ">
                    <h2>{{ 'tavo nuotykis prasideda čia'  }}</h2>
                    <div class="row" style="margin-top: 50px; display: flex;
  align-items: center;">
                        <div class="col-md-3">
                            <div class="arrow_box">
                                <h2>
                                    {{ 'order.begin.first.message' | trans }}
                                </h2>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="arrow_box" style="">
                                <h2>
                                    {{ 'order.begin.second.message' | trans }}
                                </h2>
                                <img width="150px;" src="{{ asset('images/treasure-map.png') }}"/>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="arrow_box">
                                <h2>
                                    {{ 'order.begin.second.message' | trans }}
                                </h2>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="reward">
                                <img src="{{ asset('images/chest.png') }}"/>
                            </div>
                        </div>

                    </div>
                    <div class="row" style="margin-top: 50px;">
                        <div col-md-12>
                            <a class="btn btn-primary" href="{{ path('app.order.new') }}">Užsakyti secret box</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>


{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}