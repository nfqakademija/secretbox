<form action="{{ path('app.order.new') }}" method="post" id="order-form">

    <!-- secret box selection block -->
    <div class="well well-sm text-center">
        <h3>Pasirinkite <strong>Secret box</strong> dydį</h3>

        <div class="btn-group " data-toggle="buttons" >
            {% set fadeEffect = ['fadeInLeft', 'fadeInUp', 'fadeInRight'] %}
            {% set number = 0 %}
            {% for price in prices %}

            <label class="btn btn-default order-btn wow {{ fadeEffect[number] }}" data-wow-duration="2s" data-wow-delay="0.5s">
                <input type="radio" name="secretBoxSize" id="small-box" value="{{ price.box_size }}" autocomplete="off">
                <span class="glyphicon glyphicon-ok"></span>
                <span class="order-title">{{ price.box_size|trans|capitalize }}</span>
                <span class="order-price">{{ price.price }}</span>
            </label>

                {% set number = number + 1 %}
            {% endfor %}

        </div>
    </div><!-- end block -->

    <!-- contact info block -->
    <div class="well well-sm text-center order-contact" id="order-contact">
        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
            <h3>Patikrinkite savo kontaktinius duomenis</h3>

            <div class="row">
                <div class="col-md-3 text-left">
                    <div class="has-float-label">
                        <input type="text" class="order-text-input" name="firstName" value="{{ app.user.firstName }}" placeholder="Vardas">
                        <span>Vardas</span>
                    </div>
                </div>
                <div class="col-md-3 text-left">
                    <div class="has-float-label">
                        <input type="text" class="order-text-input" name="lastName" value="{{ app.user.lastName }}" placeholder="Pavardė">
                        <span>Pavardė</span>
                    </div>
                </div>

                <div class="col-md-5 col-sm-6 text-left">
                    <div class="has-float-label">
                        <input type="email" class="order-text-input" name="email" value="{{ app.user.email }}" placeholder="El. paštas">
                        <span>El. paštas</span>
                    </div>
                </div>
            </div>

            <div class="row" style="padding-top: 20px;">
                <div class="col-md-3 text-left">
                    <div class="has-float-label">
                        <input type="text" class="order-text-input" name="phoneNo" value="" class="form-control" placeholder="Telefono numeris">
                        <span for="phoneNo">Telefonas</span>
                    </div>
                </div>
            </div>

            <!-- button to address block -->
            <div class="row">
                <div class="col-sm-12 text-right">
                    <a id="btn-delivery-address" class="btn btn-lg btn-success" style="width: 300px;">
                        <span class="fa fa-address-book-o"></span> Pristatymo adresas
                    </a>
                </div>
            </div><!-- end button -->
        {% else %}

            <!-- facebook login button -->
            <div class="row">
                <div class="col-sm-12 text-center" style="padding: 30px;">
                    <a id="btn-facebook-login" href="{{ path('app.order.now') ~ '?content=section-begin-adventure' }}" class="btn btn-lg btn-social btn-facebook" style="width: 300px;">
                        <span class="fa fa-facebook"></span>
                        <span id="login-text">Prisijungti su Facebook</span>

                    </a>
                </div>
            </div><!-- end button -->

        {% endif %}
    </div>
    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

    <!-- order address block -->
    <div class="well well-sm text-center order-address" id="order-address">
        <h3>Pasirinkite pristatymo būdą</h3>

        <!-- delivery selection -->
        <div class="btn-group" data-toggle="buttons" >

            <label class="btn btn-default delivery-btn" id="btn-delivery-home">
                <input type="radio" name="deliveryType" value="home" autocomplete="off">
                <span class="glyphicon glyphicon-ok"></span>
                <span class="order-title">Kurjeriu į namus</span>
            </label>

            <label class="btn btn-default delivery-btn" id="btn-delivery-parcel">
                <input type="radio" name="deliveryType" value="parcel_machine" autocomplete="off">
                <span class="glyphicon glyphicon-ok"></span>
                <span class="order-title">Atsiimsiu paštomate</span>
            </label>
        </div><!-- end selection -->

        <!-- delivery info -->
        <div id="delivery-display">

            <!-- home delivery -->
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="well well-sm text-center" id="home-delivery">

                        <div class="col-sm-8 col-sm-offset-2 text-left">
                            <div class="has-float-label ">
                                <input type="text" class="order-text-input" name="address" placeholder="Adresas" value="{{ app.user.address }}">
                                <span>Namų adresas</span>
                            </div>
                        </div>

                    </div>
                </div>
            </div><!-- end home delivery -->

            <!-- parcel machine delivery -->
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="well well-sm text-center" id="parcel-delivery">
                        <div class="col-sm-6 text-right">
                            <a href="#" class="btn btn-lg btn-warning" id="detect-parcel">
                                Nustatyti artimiausią
                            </a>
                        </div>
                        <div class="col-sm-6">
                            <div class="">
                                <label class="label-hidden" id="label-parcel-select" for="parcelMachine">Pasirinkite tinkamą paštomatą</label>
                                <select title="Parcel Machines" class="parcel-select" name="parcelMachine" id="select-parcelMachine" data-placeholder="Pasirinkite paštomatą..." style="font-size: 19px;">
                                    <option></option>
                                    {% for parcelMachine in parcelMachines %}
                                        <option value="{{ parcelMachine.address }}">{{ parcelMachine.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- end pacrel machine delivery -->
        </div><!-- end delivery info -->

        <!-- navigation buttons -->
        <div class="well well-sm text-center ">
            <div class="row">
                <div class="col-sm-6 text-center">
                    <a id="btn-contacts" class="btn btn-lg btn-primary" style="width: 300px;">
                        <span class="fa fa-address-book-o"></span> Grįžti prie kontaktų
                    </a>
                </div>
                <div class="col-sm-6 text-center">
                    <a id="btn-payment-type" class="btn btn-lg btn-success" style="width: 300px; display: none">
                        <span class="fa fa-money"></span> Apmokėjimo būdas
                    </a>
                </div>
            </div>
        </div><!-- end navigation buttons -->
    </div><!-- end order address block -->

    <!-- payment type block -->
    <div class="well well-sm text-center payment-type" id="payment-type">
        <h3>Pasirinkite apmokėjimo būdą</h3>

        <!-- payment selection buttons -->
        <div class="btn-group " data-toggle="buttons" >
            <label class="btn btn-default payment-btn">
                <input type="radio" name="paymentType" value="0" autocomplete="off">
                <span class="glyphicon glyphicon-ok"></span>
                <img src="{{ asset('images/payment/banklink_logo.png') }}">
            </label>

            <label class="btn btn-default payment-btn">
                <input type="radio" name="paymentType" value="1" autocomplete="off">
                <span class="glyphicon glyphicon-ok"></span>
                <img src="{{ asset('images/payment/paypal_logo.png') }}">
            </label>

            <label class="btn btn-default payment-btn">
                <input type="radio" name="paymentType" value="2" autocomplete="off">
                <span class="glyphicon glyphicon-ok"></span>
                <img src="{{ asset('images/payment/paysera_logo.png') }}">
            </label>
        </div><!-- end payment selection buttons -->

        <!-- navigation buttons -->
        <div class="well well-sm text-center ">
            <div class="row">
                <div class="col-sm-6 text-center">
                    <a id="btn-back-delivery-address" class="btn btn-lg btn-primary" style="width: 300px;">
                        <span class="fa fa-address-book-o"></span> Grįžti prie pristatymo adreso
                    </a>
                </div>
                <div class="col-sm-6 text-center">
                    <a onclick="document.forms['order-form'].submit()" href="#begin-adventure" data-scrol  id="btn-proceed-payment" class="btn btn-lg btn-success" style="width: 300px; display: none;">
                        <span class="fa fa-money"></span> Apmokėti
                        <span id="price-info"></span>
                    </a>
                </div>
            </div>
        </div><!-- end navigation buttons -->

    </div><!-- end payment type block -->

    {% endif %}
</form>

