{% extends "::base.html.twig" %}

{% block title %}
    Nauja paslaptis - {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div class="row body-order">
        <div class="col-lg-10 col-sm-12 col-lg-offset-1 content-bg">
            <div class=".content-container">
                <div class="order-container" style="margin: 30px 0 0; background: white; height: 600px; padding-top: 30px;">
                    <h2>{{ 'SECRET BOX uzsakymas'  }}</h2>

                    <div class="container">
                        <div class="col-lg-12 text-center">
                            <ul  class="nav nav-pills">
                                <li class="active">
                                    <a  href="#user" data-toggle="tab">Mano užsakymas</a>
                                </li>
                                <li>
                                    <a href="#friend" data-toggle="tab">Užsakyti draugui</a>
                                </li>
                            </ul>

                            <div class="tab-content clearfix">
                                <div class="tab-pane active" id="user">
                                    <div class="col-md-6 col-md-offset-3">
                                        <div class="panel panel-default">
                                            <div class="panel-heading">
                                                {{ 'user.name' | trans }}, {{ 'user.surname' | trans }}
                                            </div>
                                            <div class="panel-body">{{ app.user.firstName }} {{ app.user.lastName }}</div>
                                        </div>
                                        {% if form is defined %}
                                            {{ form(form) }}
                                        {% endif %}

                                        {% if errors is defined %}
                                        <ul>
                                            {% for error in errors %}
                                                <li>{{ error.message | trans }}</li>
                                            {% endfor %}
                                            {% endif %}
                                        </ul>
                                    </div>
                                </div>
                                <div class="tab-pane" id="friend">
                                    <h3>Under construction</h3>
                                </div>
                            </div>
                        </div>

                    </div>







                </div>

            </div>
        </div>
    </div>


{% endblock %}


{% block javascripts %}
    {{ parent() }}
{% endblock %}