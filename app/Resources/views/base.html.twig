<!DOCTYPE html>
<html>
<head>
    <title>{% block title %}{{ "Secret box" }}{% endblock %}</title>

    <meta name="author" content="Viktoras Bezubec">
    <meta name="robots" content="index follow">
    <meta name="googlebot" content="index follow">
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="keywords" content="Secret box, adventure, quest">
    <meta name="description" content="Secret box where your adventure begins">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/x-icon" href="{{ asset('images/favicon.ico') }}" />

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/style.css') }}"/>
        <link rel="stylesheet" href="{{ asset('css/template-style.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700%7CPoppins:400,500,600" rel="stylesheet">

    {% endblock %}
    {% block canonical_meta %}{% endblock %}

    <script src="{{ asset('js/modernizr-custom.js') }}"></script>
</head>
<body>
    <a href="#" class="btn-gfort-top"><i class="fa fa-angle-up"></i></a>
    <div id="main-wrapper">

    {% block container %}
        {% block header %}
            {% include "::inc/header.html.twig" %}
        {% endblock %}
        <div class="page-body">
            <div class="main-content">
                <div class="main-content-container">
                {% block body %}{% endblock %}
                </div>
            </div>
        </div>

    {% endblock %}

        {% block footer %}
            {% include "::inc/footer.html.twig" %}
        {% endblock %}
    </div>

{% block javascripts %}
    <script language="JavaScript">
        var userWaiting = "{{ 'user.wait' | trans }}";
    </script>
    <script src="{{ asset('js/script.js') }}"></script>
    <script src="{{ asset( 'js/pasleyjs-locale/' ~ app.request.locale ~ '.js' ) }}"></script>
    <script type="text/javascript" src="{{ asset('js/plugins/wow/wow.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('js/template-scripts.js') }}"></script>
    {#<script type="text/javascript" src="{{ asset('js/plugins/isotope/isotope.pkgd.js') }}"></script>#}
    <script type="text/javascript" src="{{ asset('js/plugins/isotope/packery-mode.pkgd.min.js') }}"></script>


{% endblock %}
</body>
</html>